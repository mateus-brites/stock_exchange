{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",

    "outDir": "./dist",

    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@errors/*": ["errors/*"]
    },

    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}